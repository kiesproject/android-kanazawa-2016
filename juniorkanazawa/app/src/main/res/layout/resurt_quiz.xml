<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#D4DFE6"
              android:weightSum="1"
              tools:context="com.higamasa.juniorkanazawa.QuizResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:text="正答数"
            android:textSize="40sp"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="正答率"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:id="@+id/correctView"
            android:textSize="50sp"
            android:layout_weight="0.21"/>

        <TextView
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="60sp"
            />

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:id="@+id/statementView"
            android:textSize="50sp"
            android:layout_weight="0.28"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/percentageView"
            android:textSize="70sp"
            android:layout_weight="0.30"/>

        <TextView
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="50sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.41"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gradingView"
            android:textSize="70sp"
            android:layout_weight="1.60"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.01"
        >
        <Button
            android:text="小/中学校選択へ"
            android:textSize="15sp"
            android:layout_width="100dp"
            android:layout_height="116dp"
            android:id="@+id/schoolButton"
            android:layout_weight="1"/>

        <Button
            android:text="年代選択へ"
            android:textSize="15sp"
            android:layout_width="100dp"
            android:layout_height="116dp"
            android:id="@+id/ageButton"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>